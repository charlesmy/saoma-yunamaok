/* components/userPicker/user-picker.wxss */
:host {
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.dialog__wrp {
  width: 666rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}
.header {
  height: 92rpx;
  border-bottom: 2rpx solid #f0f0f0;
  color: #666;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer {
  display: flex;
}
.footer > view {
  flex: 1;
  height: 92rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}
.border-right {
  border-right: 2rpx solid #f0f0f0;
}
.cancel {
  color: #999;
}
.confirm {
  color: #0b81cc;
}
.scroll {
  padding: 24rpx 0;
  height: 36vh;
  background: #fff;
}
.body {
  padding: 0 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item {
  margin: 20rpx;
  width: 166rpx;
  height: 68rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 30rpx;
  overflow: hidden;
  padding: 0 10rpx;
  white-space: nowrap;
}
.blank {
  width: 666rpx;
  height: 88rpx;
}
.choose {
  background: rgba(11, 130, 203);
  color: #fff;
}